<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:id="@+id/welcomeText"

        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/rounded_textboxes"
        android:fontFamily="sans-serif-medium"
        android:text="Welcome"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="154dp"
        android:layout_height="155dp"
        android:src="@drawable/baseline_home_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/messageinfo2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints">


    </ImageView>

    <TextView
        android:id="@+id/messageinfo"

        android:layout_width="332dp"
        android:layout_height="94dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_welcome"
        android:fontFamily="sans-serif-medium"

        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageinfo2"

        android:layout_width="334dp"
        android:layout_height="98dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_welcome"
        android:fontFamily="sans-serif-medium"

        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageinfo3"

        android:layout_width="334dp"
        android:layout_height="102dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/rounded_welcome3"
        android:fontFamily="sans-serif-medium"

        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>