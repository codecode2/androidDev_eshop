<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/suppliers_textview"
        android:layout_width="537dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_textboxes"
        android:text="Suppliers"
        android:textAlignment="center"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_products"
        android:layout_width="323dp"
        android:layout_height="58dp"

        android:layout_marginStart="180dp"
        android:layout_marginTop="40dp"
        android:scaleX="2"

        android:scaleY="1.7"
        android:src="@drawable/suppliers_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suppliers_textview"></ImageView>

    <Button
        android:id="@+id/insertButton"
        android:layout_width="196dp"
        android:layout_height="72dp"
        android:background="@drawable/rounded_button"
        android:text="INSERT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/modifyButton"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_products"
        app:layout_constraintVertical_bias="0.575" />

    <Button
        android:id="@+id/modifyButton"
        android:layout_width="198dp"
        android:layout_height="75dp"
        android:background="@drawable/rounded_button"
        android:text="Modify"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/insertButton"
        app:layout_constraintTop_toBottomOf="@+id/icon_products"
        app:layout_constraintVertical_bias="0.589" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="202dp"
        android:layout_height="79dp"
        android:background="@drawable/rounded_button"
        android:text="delete"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/modifyButton"
        app:layout_constraintTop_toBottomOf="@+id/icon_products"
        app:layout_constraintVertical_bias="0.61" />

    />


</androidx.constraintlayout.widget.ConstraintLayout>