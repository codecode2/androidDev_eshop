<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/insert_supplies_title"
            android:layout_width="358dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:background="@drawable/rounded_textboxes"
            android:text="Insert Supplies"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/supplies_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="110dp"
            android:layout_height="106dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="133dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/add_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <EditText
            android:id="@+id/supplies_id"
            android:layout_width="341dp"
            android:layout_height="46dp"
            android:layout_marginEnd="161dp"
            android:height="22dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="10"
            android:hint="Insert id"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/product_id_supplies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insert_supplies_title"
            app:layout_constraintVertical_bias="0.5" />

        <EditText
            android:id="@+id/product_id_supplies"
            android:layout_width="344dp"
            android:layout_height="49dp"
            android:layout_marginEnd="161dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="10"
            android:hint="Product id"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/supplier_id_supplies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/supplies_id"
            app:layout_constraintVertical_bias="0.5" />

        <EditText
            android:id="@+id/supplier_id_supplies"
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:layout_marginEnd="158dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="13"
            android:hint="Supplier id"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/insertSuppliesSubmitButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_id_supplies"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/insertSuppliesSubmitButton"
            android:layout_width="198dp"
            android:layout_height="53dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="269dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="269dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/rounded_button"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>