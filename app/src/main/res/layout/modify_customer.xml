<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <TextView
            android:id="@+id/insert_supplies_title"
            android:layout_width="344dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:background="@drawable/rounded_textboxes"
            android:text="Modify a Customer"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/customer_id"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Customer id"
            android:background="@drawable/rounded_textboxes2"
            android:height="22dp"
            />

        <EditText
            android:id="@+id/username_name"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Insert username"
            android:background="@drawable/rounded_textboxes2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ems="13"
            android:inputType="text"
            android:hint="Insert email"
            android:background="@drawable/rounded_textboxes2"/>



        <EditText
            android:id="@+id/customer_address"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="10"
            android:hint="Insert address"
            />

        <EditText
            android:id="@+id/customer_phone"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="10"
            android:hint="Insert phone"
            android:inputType="number" />

        <Button
            android:id="@+id/modifyCustomerSubmitButton2"
            android:layout_width="145dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_button"
            android:text="Submit" />

</LinearLayout>