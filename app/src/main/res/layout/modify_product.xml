<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <TextView
            android:id="@+id/insert_supplies_title"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:background="@drawable/rounded_textboxes"
            android:text="Modify a Product"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/insert_spinner2"

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:background="@drawable/rounded_textboxes2"
            ></Spinner>

        <EditText
            android:id="@+id/product_id"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:hint="insert id"
            android:background="@drawable/rounded_textboxes2"
            android:height="22dp"
            />

        <EditText
            android:id="@+id/product_name"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Insert name"
            android:background="@drawable/rounded_textboxes2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/product_description"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ems="13"
            android:inputType="text"
            android:hint="Insert description"
            android:background="@drawable/rounded_textboxes2"/>

        <EditText
            android:id="@+id/product_price"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="10"
            android:hint="Insert price"
            android:inputType="number" />
        <EditText
            android:id="@+id/product_quantity"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_textboxes2"
            android:ems="10"
            android:hint="Quantity"
            android:inputType="number" />

        <Button
            android:id="@+id/insertProductSubmitButton"
            android:layout_width="145dp"
            android:layout_height="69dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_button"
            android:text="Submit" />

</LinearLayout>